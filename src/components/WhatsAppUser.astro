---
export interface Props {
	id: string
	title: string
	lastMessage: string
	photo: string
	date: string
}

const { id, title, lastMessage, photo, date } = Astro.props;
---

<a href={ `/${id}` }>
	<div 
		class="flex items-center relative gap-5 w-72 h-12 px-2 bg-slate-700" 
		style=`view-transition-name: user-${id}` 
	>
		<img 
			src={ `/img/${photo}` } 
			alt={ `${id}` } 
			class="w-8 h-8 rounded-full"
			style=`view-transition-name: user-icon-${id}`
		>
		<div class="flex items-start flex-col">
			<h1 
				class="text-[12px] font-semibold text-white" 
				style=`view-transition-name: user-name-${id}`
			>
				{ title }
			</h1>
			<p class="text-[10px] text-gray-400">{ lastMessage }</p>
		</div>
		<p class="absolute top-2 right-2 text-[10px] text-gray-400">{ date }</p>
	</div>	
</a>

